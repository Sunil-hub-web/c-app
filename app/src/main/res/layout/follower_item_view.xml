<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/imageFollower"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/baseline_play_circle_filled_24"/>

    <TextView
        android:id="@+id/usernameFollower"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:textColor="@color/black"
        android:text="Username"/>

    <TextView
        android:id="@+id/followFollower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="2dp"
        android:textStyle="bold"
        android:textSize="12sp"
        android:background="@drawable/follow_background"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:text="Follow"/>

    <TextView
        android:id="@+id/unfollowFollower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="2dp"
        android:textStyle="bold"
        android:textSize="12sp"
        android:visibility="gone"
        android:background="@drawable/unfollow_background"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:text="Unfollow"/>

</LinearLayout>